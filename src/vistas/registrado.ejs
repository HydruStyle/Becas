            <% if (login) { %>
                <a class="navbar-brand" href="/home/<%= codigo %>">BecasCUT</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false"
                    aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav navbar-right">
                        <li class="nav-item dropdown dropcenter">
                            <button class="btn dropdown-toggle navbar-brand" data-bs-toggle="dropdown"
                                aria-expanded="false">
                                Documentos de becas
                            </button>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item disabled" href="#">Alimentos</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="/downFormato">Formato de solicitud</a>
                                <a class="dropdown-item" href="/downCovocatoriaAlimentos">Convocatoria alimentos</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item disabled" href="#">Becarios</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="/downFormato">Formato de solicitud</a>
                                <a class="dropdown-item" href="/downCovocatoriaAlimentos">Convocatoria alimentos</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown dropcenter">
                            <a class="navbar-brand" href="/statusRegistro/<%= codigo %>">Ver registro</a>
                        </li>
                        <li class="nav-item dropdown dropcenter">
                            <button class="btn dropdown-toggle navbar-brand" data-bs-toggle="dropdown"
                                aria-expanded="false">
                                Cuenta
                            </button>
                            <ul class="dropdown-menu">
                                <li class="nav-item">
                                    <a class="dropdown-item" href="#">
                                        <b>Usuario: <%= codigo %>
                                        </b>
                                    </a>
                                    <a class="dropdown-item" style="color: red; text-align: center;"
                                        href="/Logout"><strong>Logout</strong></a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
        </div>
    </nav>

    <div class="container my-3">
        <div class="card col-sm-12 col-md-12 col-lg-6 col-xl-6"
            style="margin-left: 25%; margin-right: 25; margin-top: 10%;">
            <div class="card-body" style="text-align: center;">
                <h1>Ya te has registrado en esta convocatoria.</h1>
                <h2>Mira el estatus de tu registro</h2>
                <a class="btn btn-primary" href="/statusRegistro/<%= codigo %>">Ver estatus</a>
            </div>
            <% } %>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
        crossorigin="anonymous"></script>
</body>

</html>