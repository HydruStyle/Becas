    <div class="container my-3">
        <div class="card" style="margin-left: 20%; width: 60%;">
            <div class="card-body shadow" style="text-align: center;">
                <h1>Subir archivos</h1>
            </div>
            <hr class="solid">
            <form action="/uploadArchivos" method="post" enctype="multipart/form-data">
                <% if (user) { %> 
                <input type="text" name="codigo" id="codigo" value="<%= user.codigo %>">
                <% } %>
                <div class="card-body shadow">
                    <div class="input-group-lg mb-3">
                        <label class="input-group-text" for="solicitud" data-bs-toggle="tooltip" data-bs-placement="top"
                            title="Sube el formato que descargaste actualizado con tus datos"> <b>FORMATO DE
                                SOLICITUD*</b></label>
                        <input type="file" class="form-control" name="solicitud" id="solicitud" accept=".pdf" required>
                    </div>
                </div>
                <div class="card-body shadow">
                    <div class="input-group-lg mb-3">
                        <label class="input-group-text" for="ine" data-bs-toggle="tooltip" data-bs-placement="top"
                            title="Sube un PDF con tu identificacion escaneada por ambos lados"><b>INE*</b></label>
                        <input type="file" class="form-control" name="ine" id="ine" accept=".pdf" required>
                    </div>
                </div>
                <div class="card-body shadow">
                    <div class="input-group-lg mb-3">
                        <label class="input-group-text" for="curp" data-bs-toggle="tooltip" data-bs-placement="top"
                            title="Sube tu CURP con el formato actualizado"><b>CURP*</b></label>
                        <input type="file" class="form-control" name="curp" id="curp" accept=".pdf" required>
                    </div>
                </div>
                <div class="card-body shadow">
                    <div class="input-group-lg mb-3">
                        <label class="input-group-text" for="domicilio" data-bs-toggle="tooltip" data-bs-placement="top"
                            title="Rwecuerda que el comprobante debe ser menor a 3 meses"><b>COMPROBANTE DE
                                DOMICILIO*</b></label>
                        <input type="file" class="form-control" name="domicilio" id="domicilio" accept=".pdf" required>
                    </div>
                </div>
                <div class="card-body shadow">
                    <div class="input-group-lg mb-3">
                        <label class="input-group-text" for="ingresos" data-bs-toggle="tooltip" data-bs-placement="top"
                            title="Debe ser el comprobante de ingresos del principal provedor de la familia"><b>COMPROBANTE
                                DE INGRESOS*</b></label>
                        <input type="file" class="form-control" name="ingresos" id="ingresos" accept=".pdf" required>
                    </div>
                </div>
                <div class="card-body shadow">
                    <div class="input-group-lg mb-3">
                        <label class="input-group-text" for="edoCuenta" data-bs-toggle="tooltip" data-bs-placement="top"
                            title="Estado de cuenta a nombre del solicitante"><b>ESTADO DE
                                CUENTA*</b></label>
                        <input type="file" class="form-control" name="edoCuenta" id="edoCuenta" accept=".pdf" required>
                    </div>
                </div>
                <div class="card-body shadow">
                    <div class="input-group-lg mb-3">
                        <label class="input-group-text" for="fiscal" data-bs-toggle="tooltip" data-bs-placement="top"
                            title="Constancia emitida por el SAT"><b>CONSTANCIA DE SITUACION
                                FISCAL*</b></label>
                        <input type="file" class="form-control" name="fiscal" id="fiscal" accept=".pdf" required>
                    </div>
                </div>
                <div class="card-body">
                    <input class="btn btn-primary btn-block" type="submit" value="SUBIR ARCHIVOS">
                </div>
            </form>
        </div>
    </div>


